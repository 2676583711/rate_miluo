<% layout('/include/default.html', {libs:["tree","table","layer"]}){ %>
<style type="text/css">
	tr>td:first-child,tr>th:first-child{
		border-left:  1px solid #e4eaec!important;
	}
	tr>td:last-child,tr>th:last-child{
		border-right:  1px solid #e4eaec!important;
	}
	th{
		border-top:  1px solid #e4eaec!important;
	}
</style>
	<div class="wrapper-content animated fadeInRight">
		<div class="col-sm-12">
			<div class="ibox" style="margin-bottom: 0;">
				<div class="ibox-body">
					<div class="fixed-table-toolbar">
						<div class="columns pull-left" style="margin-top: 0;">
							<button type="button" class="btn  btn-danger"
								onclick="batchRemove()">
								<i class="fa fa-trash" aria-hidden="true"></i>删除
							</button>
							<button class="btn btn-success" onclick="exportExcel()">导出
							</button>
						</div>
						<div class="columns pull-right" role="group" style="margin-top: 0;">
							<button class="btn btn-success" onclick="reLoad()">
								<i class="fa fa-search" aria-hidden="true"></i>查询
							</button>
							<button class="btn btn-primary" onclick="reFresh()">刷新</button>
						</div>
						<div class="pull-right search col-md-2" style="margin-top: 0;">
							<input id="searchOperation" type="text" class="form-control"
								placeholder="请输入任务名称">
						</div>
						<div class="pull-right search col-md-2 nopadding" style="margin-top: 0;">
							<input id="searchUsername" type="text" class="form-control"
								placeholder="请输入负责人">
						</div>
					</div>
					<table id="exampleTable" data-mobile-responsive="true">
					</table>
				</div>
			</div>
		</div>
	</div>
	<%	} %>
<script type="text/javascript" src="/js/task/miluotaskinfo/list.js"></script>
<script>
var bb;
var cc;
  <% if(shiro.hasPermission('edit:task:task')){ %>
             bb=1;
             cc=1;
   <%}%>

</script>